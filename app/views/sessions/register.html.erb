<h3 class="text-center">Register</h3>

<%= form_with(model: User.new, url: sessions_do_register_path, remote: true) do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control', placeholder: :email, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control', placeholder: :password, required: true %>
  </div>

  <div class="actions text-right">
    <%= form.submit value: 'Register', class: 'btn btn-primary' %>
  </div>
<% end %>
