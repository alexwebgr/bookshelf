<h3>Upload file</h3>
<%= form_with(model: Upload.new, url: uploader_do_file_upload_path, remote: true) do |form| %>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
    </div>
    <div class="custom-file">
      <%= form.label :csv_file, class: 'custom-file-label', for: 'inputGroupFile01'  %>
      <%= form.file_field :csv_file, class: 'custom-file-input', id: 'inputGroupFile01' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>

<%= form_tag uploader_do_upload_path do %>
  <div class="form-group">
    <label>Paste the contents of the CSV file below</label>
    <%= text_area_tag 'csv_file', nil, class: 'form-control', placeholder: :csv, required: true %>
  </div>
  <%= submit_tag 'Upload', class: 'btn btn-primary' %>
<% end %>
